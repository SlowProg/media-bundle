{% set attr = {
    id: null,
    class: null,
    style: null,
    alt: image.title,
    title: image.title,
    width: null,
    height: null
}|merge(options) %}

<img src="{{ path('thrace_media_image_render', {'filepath': image.imagePath, 'hash': image.hash, 'filter': filter}) }}"
    {% for attrname, attrvalue in attr if attrvalue %}{{ attrname }}="{{ attrvalue }}" {% endfor %}
/>



